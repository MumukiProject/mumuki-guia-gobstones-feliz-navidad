procedure DibujarFilaAlEste(largo, color) {
  repeat (largo - 1) {
    Poner(color)
    Mover(Este)
  }
  
  Poner(color)
  MoverN(largo - 1, Oeste)
}

procedure PonerLejosAlEste(cantidad, color) {
  MoverN(cantidad, Este)
  Poner(color)
  MoverN(cantidad, Oeste)
}

procedure MoverN(cantidad, direccion) {
  repeat (cantidad) {
    Mover(direccion)
  }
}